extends layout

block content
  h1 My shopping Cart
  - var total=0;
    table.table
      thead
        th Name
        th Price
        th description 
        th rating
        th Actions
      tbody
        each item in cart
          - total += Number(item.price)
          tr
            td=item.name
            td=item.price
            th=item.description 
            th=item.rating 
            td
              a(href="/products/cart/remove/"+item._id, class="btn btn-danger") Remove Item
      tfoot
        tr
          td Total
          td=total
